    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js",
            "headers": {
                "Cache-Control": "no-store, no-cache, must-revalidate"
            }
        },
        {
            "src": "/admin(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/(.*\\.(?:css|js|json|png|jpg|jpeg|gif|webp|svg|ico|mp4|webm|woff|woff2|ttf|eot|otf|mov))$",
            "dest": "/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.js"
        }
    ]
